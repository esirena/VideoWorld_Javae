<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace指定我们的到具体的bean -->
<mapper namespace="com.lxw.videoworld.dao.SearchResultDao">

    <!--Record-->
    <select id="getRecordByParams" resultType="SearchResult">
        SELECT
        *
        FROM
        `search_result`
        <choose>
            <when test="uid != null">
                WHERE
                `uid` = #{uid}
                <if test="url != null">
                    AND
                    `url` = #{url}
                </if>
            </when>
            <otherwise>
                WHERE
                `url` = #{url}
            </otherwise>
        </choose>
        ORDER BY
        `time`
    </select>

    <!--增加语句-->
    <insert id="add" parameterType="SearchResult">
        INSERT INTO
        `search_result`
        (`url`,`uid`,`cili_link`,`thunder_link`,`title`,`amounts`,`date`,`size`,`hot`)
        VALUES
        (#{url},#{uid},#{ciliLink},#{thunderLink},#{title},#{amounts},#{date},#{size},#{hot})
    </insert>

    <!-- 更新信息 -->
    <update id="update" parameterType="SearchResult">
        UPDATE
        `search_result`
        SET
        `url`=#{url},`uid`=#{uid}, `cili_link`=#{ciliLink},`title`=#{title}, `thunder_link`=#{thunderLink}, `amounts`=#{amounts}, `date`=#{date}, `date`=#{date}, `size`=#{size}, `hot`=#{hot}
        WHERE
        `url`=#{url}
        AND
         `uid`=#{uid} ;
    </update>

</mapper>