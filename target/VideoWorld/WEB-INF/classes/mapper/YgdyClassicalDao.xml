<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace指定我们的到具体的bean -->
<mapper namespace="com.lxw.videoworld.dao.YgdyClassicalDao">

    <!--查找-->
    <select id="findOneById" resultType="Source" parameterType="String">
    SELECT
    *
    FROM
    `ygdy_classical`
    WHERE
    `url` = #{url}
    </select>

    <!--查找所有-->
    <select id="findAll" resultType="Source">
        SELECT
        *
        FROM
        `ygdy_classical`
    </select>

    <!--增加语句-->
    <insert id="add" parameterType="Source">
        INSERT INTO
        `ygdy_classical`
        (`id`,`category`,`type`,`title`,`date`,`url`,`status`)
        VALUES
        (#{id},#{category},#{type},#{title},#{date},#{url},#{status})
    </insert>

    <!-- 删除 -->
    <update id="del" parameterType="Source">
        UPDATE
        `ygdy_classical`
        SET
        `status`=0
        WHERE
        `url`=#{url};
    </update>

    <!-- 更新信息 -->
    <update id="update" parameterType="Source">
        UPDATE
        `ygdy_classical`
        SET
        `category`=#{category}, `type`=#{type}, `title`=#{title}, `date`=#{date}, `url`=#{url}, `status`=#{status}
        WHERE
        `url`=#{url};
    </update>
</mapper>