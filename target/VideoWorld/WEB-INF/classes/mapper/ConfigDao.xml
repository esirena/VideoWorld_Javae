<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace指定我们的到具体的bean -->
<mapper namespace="com.lxw.videoworld.dao.ConfigDao">

    <!--查找-->
    <select id="findOneById" resultType="Config" parameterType="String">
    SELECT
    *
    FROM
    `config`
    WHERE
    `id` = #{id}
    </select>

    <!-- 更新信息 -->
    <update id="update" parameterType="Config">
        UPDATE
        `config`
        SET
        `notice`=#{notice}, `image`=#{image}, `version_code`=#{versionCode}, `force_version_code`=#{forceVersionCode},
        `ciliLink`=#{ciliLink}, `flag`=#{flag}
        WHERE
        `id`=#{id};
    </update>

    <!-- 更新搜索热词 -->
    <update id="updateKeyword" parameterType="String">
        UPDATE
        `config`
        SET
        `keyword`=#{keyword}
        WHERE
        `id`='1';
    </update>

</mapper>